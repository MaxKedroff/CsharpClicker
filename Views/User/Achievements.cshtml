@model CSharpClicker.Web.ViewModels.AchievementsViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles
{
    <link href="~/css/Achievements.css" rel="stylesheet" />
}

<div class="achievements-container">
    <h3 class="achievements-title">Достижения</h3>
    <div class="achievements-list">
        @foreach (var achievement in Model.Achievements)
        {
            var isCompleted = Model.UserAchievements.Any(ua => ua.AchievementId == achievement.Id);

            <div class="achievement-card @(isCompleted ? "completed" : "not-completed")">
                <div class="achievement-header">
                    <h4 class="achievement-title">@achievement.Title</h4>
                </div>
                <div class="achievement-body">
                    <p class="achievement-description">@achievement.Description</p>
                </div>
                <div class="achievement-status">
                    <p>@(isCompleted ? "Достижение выполнено!" : "Достижение еще не выполнено")</p>
                </div>
            </div>
        }
    </div>
</div>


